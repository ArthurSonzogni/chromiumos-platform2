# Install Chrome/Chromium OS from the recovery installer.

if [ $# -ne 1 ]; then
  echo "usage:  $0 <source-device>" >&2
  exit 1
fi

export IS_RECOVERY_INSTALL=1
exec chromeos-install --storage_diags --yes --payload_image="$1"
