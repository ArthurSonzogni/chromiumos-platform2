import("//common-mk/pkg_config.gni")

executable("graphics.GBM.gbmtest") {
  pkg_deps = [
    "gbm",
    "libdrm",
    "libchrome-${libbase_ver}",
  ]

  # libgtest.so is not installed in DUT. Instead, link against the static lib.
  libs = [
    ":libgtest.a",
    "pthread",
  ]
  sources = [
    "graphics.GBM.gbmtest.cc",
  ]
}

group("all") {
  deps = [
    ":graphics.GBM.gbmtest",
  ]
}
