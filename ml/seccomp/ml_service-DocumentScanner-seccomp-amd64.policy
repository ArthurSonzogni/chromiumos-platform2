# This file lists out the seccomp policy for allowed syscalls for
# DocumentScanner on AMD64.

# rseq should be first due to frequency and purpose to decrease nptl latency
rseq: 1

brk: 1
clock_gettime: 1
clone: 1
close: 1
connect: 1
epoll_ctl: 1
epoll_wait: 1
eventfd2: 1
exit_group: 1
exit: 1
fcntl: 1
flock: 1
fstat: 1
fstatfs: 1
futex: 1
getpid: 1
getrandom: 1
gettid: 1
gettimeofday: 1
lseek: 1
madvise: 1
memfd_create: 1
mmap: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mprotect: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
munmap: 1
newfstatat: 1
openat: 1
read: 1
recvmsg: 1
restart_syscall: 1
rt_sigaction: 1
rt_sigprocmask: 1
rt_sigreturn: 1
rt_sigtimedwait: 1
sched_getaffinity: 1
sched_yield: 1
sendto: 1
set_robust_list: 1
sysinfo: 1

# for lazy evaluation of brillo::InitLog(), which is called in the control
# process but may not be evaluated until inside the worker process.
socket: arg0 == AF_UNIX
statx: 1
uname: 1
write: 1
