# This file lists out the seccomp policy for allowed syscalls for
# TextClassifierModel.

brk: 1
clock_gettime: 1
close: 1
connect: 1
epoll_ctl: 1
epoll_pwait: 1
eventfd2: 1
exit: 1
exit_group: 1
faccessat: 1
faccessat2: 1
flock: 1
fstat: 1
fstatfs: 1
futex: 1
getdents64: 1
getpid: 1
getrandom: 1
gettid: 1
gettimeofday: 1
lseek: 1
memfd_create: 1
mmap: arg2 in ~PROT_EXEC
mprotect: arg2 in ~PROT_EXEC
mremap: 1
munmap: 1
newfstatat: 1
openat: 1
read: 1
readlinkat: 1
recvmsg: 1
rt_sigprocmask: 1
rt_sigtimedwait: 1
sendto: 1
set_robust_list: 1
set_tid_address: 1
statx: 1
uname: 1

# for lazy evaluation of brillo::InitLog(), which is called in the control
# process but may not be evaluated until inside the worker process.
socket: arg0 == AF_UNIX
write: 1
