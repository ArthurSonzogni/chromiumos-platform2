# This file lists out the seccomp policy for allowed syscalls on ml_service.
# rseq should be first due to frequency and purpose to decrease nptl latency
rseq: 1

_llseek: 1
access: 1
faccessat: 1
faccessat2: 1
ARM_set_tls: 1
brk: 1
clock_getres: 1
clock_getres_time64: 1
clock_gettime64: 1
clock_gettime: 1
clock_nanosleep: 1
clock_nanosleep_time64: 1
clone: 1
close: 1
connect: 1
epoll_create1: 1
epoll_ctl: 1
epoll_wait: 1
eventfd2: 1
execve: 1
exit: 1
exit_group: 1
fcntl64: 1
flock: 1
fstat64: 1
fstatat64: 1
fstatfs64: 1
fstatfs: 1
futex_time64: 1
futex: 1
getdents64: 1
getegid32: 1
geteuid32: 1
getgid32: 1
getpid: 1
getpriority: 1
getrandom: arg2 in ~GRND_RANDOM
getresgid32: 1
getresuid32: 1
getsockname: 1
gettid: 1
gettimeofday: 1
getuid32: 1
ioctl: arg1 == SIOCSIFFLAGS || arg1 == TCGETS || arg1 == SIOCGIFFLAGS
kill: arg1 == SIGKILL
lstat64: 1
madvise: 1
memfd_create: 1
mmap2: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mount: 1
mprotect: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mremap: 1
munmap: 1
open: 1
openat: 1
pipe2: 1
pipe: 1
poll: 1
prctl: 1
pread64: 1
process_vm_readv: 1
pwrite64: 1
read: 1
readlink: 1
recvmsg: 1
restart_syscall: 1
rt_sigaction: 1
rt_sigprocmask: 1
rt_sigreturn: 1
rt_sigtimedwait: 1
rt_sigtimedwait_time64: 1
sched_getparam: 1
sched_getscheduler: 1
sched_getaffinity: 1
sched_yield: 1
send: 1
sendmsg: 1
set_robust_list: 1
set_tid_address: 1
setresuid32: 1
setsid: 1
sigaltstack: 1
signalfd4: 1
socket: arg0 == AF_UNIX
socketpair: 1
stat64: 1
statx: 1
sysinfo: 1
tgkill: 1
ugetrlimit: 1
umount2: 1
uname: 1
unshare: 1
wait4: 1
write: 1

ftruncate64: 1
fallocate: 1
unlink: 1
