# This file lists out the seccomp policy for allowed syscalls for
# WebPlatformHandwritingModel.
brk: 1
clock_gettime: 1
close: 1
connect: 1
epoll_create1: 1
epoll_ctl: 1
epoll_wait: 1
exit: 1
exit_group: 1
fcntl: 1
flock: 1
fstat: 1
futex: 1
getegid: 1
geteuid: 1
getgid: 1
getpid: 1
getrandom: 1
gettid: 1
getuid: 1
ioctl: arg1 == TCGETS
lseek: 1
# arg2 must exclude PROT_WRITE ('in 0xfffffffd') or PROT_EXEC ('in 0xfffffffb'):
mmap: arg2 in 0xfffffffd || arg2 in 0xfffffffb
mprotect: arg2 in 0xfffffffd || arg2 in 0xfffffffb
munmap: 1
openat: 1
pipe2: 1
read: 1
recvmsg: 1
rt_sigprocmask: 1
sched_getaffinity: 1
sendto: 1
socket: arg0 == AF_UNIX
write: 1
