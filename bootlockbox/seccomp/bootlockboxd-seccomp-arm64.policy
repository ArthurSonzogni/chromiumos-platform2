# This file lists out the seccomp policy for allowed syscalls on bootlockboxd
# rseq should be first due to frequency and purpose to decrease nptl latency
rseq: 1

gettid: 1
mmap: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
openat: 1
mprotect: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
read: 1
close: 1
fstat: 1
epoll_pwait: 1
recvmsg: 1
ppoll: 1
sendto: 1
sendmsg: 1
getpid: 1
write: 1
rt_sigprocmask: 1
gettimeofday: 1
geteuid: 1
getegid: 1
getuid: 1
getgid: 1
futex: 1
rt_sigaction: 1
signalfd4: 1
fcntl: 1
pipe2: 1
epoll_ctl: 1
brk: 1
connect: 1
munmap: 1
socket: arg0 == AF_UNIX
epoll_create1: 1
getsockname: 1
fdatasync: 1
set_robust_list: 1
restart_syscall: 1
exit: 1
exit_group: 1
rt_sigreturn: 1
renameat: 1
getresuid: 1
uname: 1
prctl: arg0 == PR_SET_NAME
clock_getres: 1
faccessat: 1
faccessat2: 1
setpriority: 1
lseek: 1
set_tid_address: 1
getrlimit: 1
prlimit64: arg2 == 0 && arg3 != 0
clone: 1
getresgid: 1
sysinfo: 1
clock_gettime: 1
getrandom: arg2 in ~GRND_RANDOM
madvise: 1
mlock: 1
munlock: 1
flock: 1
newfstatat: 1
nanosleep: 1
clock_nanosleep: 1

# tgkill is used by abort() and CHECK()/LOG(FATAL).
tgkill: arg2 == SIGABRT
fstatfs: 1

process_vm_readv: 1
