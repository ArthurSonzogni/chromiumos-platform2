#!/usr/bin/make -f
# -*- makefile -*-
# Copyright (c) 2009 The Chromium OS Authors. All rights reserved.
# Use of this source code is governed by a BSD-style license that can be
# found in the LICENSE file.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp
build-stamp:
	dh_testdir
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	cp $(CURDIR)/shutdown.sh $(CURDIR)/debian/chromeos-init/sbin/chromeos_shutdown
	cp $(CURDIR)/startup.sh $(CURDIR)/debian/chromeos-init/sbin/chromeos_startup
	cp $(CURDIR)/acpid.conf              \
	   $(CURDIR)/bootchart.conf          \
	   $(CURDIR)/connman.conf            \
	   $(CURDIR)/console-kit.conf        \
	   $(CURDIR)/cron.conf               \
	   $(CURDIR)/devkit-install.conf     \
	   $(CURDIR)/dbus.conf               \
	   $(CURDIR)/dump-boot-stats.conf    \
	   $(CURDIR)/halt.conf               \
	   $(CURDIR)/iptables.conf           \
	   $(CURDIR)/klog.conf               \
	   $(CURDIR)/netdebug.conf           \
	   $(CURDIR)/ntp.conf                \
	   $(CURDIR)/preload-chrome.conf     \
	   $(CURDIR)/procps.conf             \
	   $(CURDIR)/reboot.conf             \
	   $(CURDIR)/software-update.conf    \
	   $(CURDIR)/startup.conf            \
	   $(CURDIR)/syslog.conf             \
	   $(CURDIR)/udev.conf               \
	   $(CURDIR)/ui.conf                 \
	   $(CURDIR)/wpasupplicant.conf      \
	   $(CURDIR)/metrics_daemon.conf     \
	   $(CURDIR)/debian/chromeos-init/etc/init.chromeos/

# Build architecture-independent files here.
binary-indep: install
	dh_testdir
	dh_testroot
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep

.PHONY: build clean install binary-indep binary
