import("//common-mk/pkg_config.gni")

# Library that provides helpers for the diag tool.
pkg_config("libdiag_pkg_deps") {
  pkg_deps = [
    "libbrillo",
    "libchrome-${libbase_ver}",
  ]
}

source_set("libdiag") {
  configs += [ ":libdiag_pkg_deps" ]
  deps = [
    "//diagnostics/common:libcommon",
    "//diagnostics/cros_healthd_mojo_adapter:libcros_healthd_mojo_adapter",
    "//diagnostics/mojo:diagnostics_mojo_bindings",
  ]
  sources = [ "diag_actions.cc" ]
}

# The diag tool executable.
pkg_config("diag_pkg_deps") {
  pkg_deps = [
    "libbrillo",
    "libchrome-${libbase_ver}",
  ]
}

executable("diag") {
  deps = [
    ":libdiag",
    "//diagnostics/mojo:diagnostics_mojo_bindings",
  ]
  configs += [ ":diag_pkg_deps" ]
  sources = [ "main.cc" ]
}
