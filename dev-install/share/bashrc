# Allow `sudo dev_install` and `sudo emerge` to work by preserving the
# active LD_LIBRARY_PATH settings.
# https://crbug.com/535771
alias sudo='sudo LD_LIBRARY_PATH="${LD_LIBRARY_PATH}"'
