{
    "acVersion": "0.5.1",
    "acKind": "PodManifest",
    "apps": [
        {
            "name": "ping-service",
            "image": {
                "name": "com.android.embedded.ping-brick",
                "id": "sha512-...",
                "labels": [
                    {
                        "name":  "version",
                        "value": "1.0.0"
                    }
                ]
            },
            "app": {
                "exec": [
                    "/bin/true",
                    "--quiet"
                ],
                "user": "100",
                "group": "300",
                "workingDirectory": "/opt/work",
                "ports": [
                    {
                        "name": "health",
                        "port": 4000,
                        "protocol": "tcp",
                        "socketActivated": false
                    }
                ]
            }
        }
    ],
    "isolators": [
        {
            "name": "os/bruteus/namespaces-share-set",
            "value": {
                "set": [ "CLONE_NEWIPC" ],
            }
        },
        {
            "name": "os/bruteus/device-path-filter-set",
            "value": {
                "set": [
                    "/dev/binder",
                    "/dev/input/*"
                ]
            }
        },
        {
            "name": "os/bruteus/device-node-filter-set",
            "value": {
                "set": [
                     { "major": 13, "minor": -1 }
                ]
            }
        },
        {
            "name": "os/bruteus/service-user-whitelist",
            "value": {
                "service": "com.android.embedded.ping-brick.ping-service",
                "whitelist": [ "com.android.embedded.ping-brick.ping-user" ]
            }
        },
        {
            "name": "os/bruteus/service-group-whitelist",
            "value": {
                "service": "com.android.embedded.ping-brick.ping-service",
                "whitelist": [ "com.android.embedded.ping-brick.pingers",
			       "com.android.embedded.ping-brick.echoers" ]
            }
        },
        {
            "name": "os/bruteus/service-group-whitelist",
            "value": {
                "service": "com.android.embedded.ping-brick.echo-service",
                "whitelist": [ "com.android.embedded.ping-brick.echoers" ]
            }
        }
    ],
    "annotations": [
        {
            "name": "bruteus-service-0",
            "value": "com.android.embedded.ping-brick.ping-service",
        },
        {
            "name": "bruteus-service-1",
            "value": "com.android.embedded.ping-brick.echo-service",
        }
    ]
}
