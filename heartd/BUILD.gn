import("//common-mk/pkg_config.gni")

group("all") {
  deps = [
    ":heartd",
    ":install_init_config",
  ]
}

executable("heartd") {
  sources = [ "main.cc" ]
  install_path = "bin"
}

install_config("install_init_config") {
  sources = [ "init/heartd.conf" ]
  install_path = "upstart"
}
