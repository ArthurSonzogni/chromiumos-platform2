# This file lists out the seccomp policy for allowed syscalls on tpm2-simulator

# rseq should be first due to frequency and purpose to decrease nptl latency
rseq: 1

gettid: 1
getpid: 1
getuid32: 1
getgid32: 1
geteuid32: 1
getegid32: 1
getresuid32: 1
getresgid32: 1
epoll_create1: 1
epoll_wait: 1
epoll_ctl: 1
poll: 1
pselect6: 1
open: 1
openat: 1
creat: 1
unlink: 1
unlinkat: 1
fstat: 1
stat: 1
fstat64: 1
stat64: 1
read: 1
write: 1
close: 1
sendto: 1
mmap2: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mprotect: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mremap: 1
munmap: 1
brk: 1
lseek: 1
_llseek: 1
access: 1
faccessat: 1
faccessat2: 1
prlimit64: 1
madvise: 1
exit: 1
exit_group: 1
rt_sigreturn: 1
rt_sigprocmask: 1
restart_syscall: 1
clock_getres: 1
clock_getres_time64: 1
gettimeofday: 1
clock_gettime: 1
clock_gettime64: 1
nanosleep: 1
clock_nanosleep: 1
clock_nanosleep_time64: 1
futex: 1
getrandom: arg2 in ~GRND_RANDOM
sysinfo: 1
mlock: 1
munlock: 1

# For base::FilePathWatcher
ioctl: arg1 == FIONREAD

# For Ti50 emulator
connect: 1
recvmsg: 1
sendmsg: 1
socket: arg0 == AF_UNIX
wait4: 1

# tgkill is used by abort() and CHECK()/LOG(FATAL).
tgkill: 1
