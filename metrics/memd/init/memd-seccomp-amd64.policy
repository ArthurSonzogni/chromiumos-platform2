#
# rseq should be first due to frequency and purpose to decrease nptl latency
rseq: 1

# Use this to generate a starting list of syscalls:
#
# strace -f minijail0 -i /usr/bin/memd always-poll-fast >& /tmp/memd.strace & sleep 3; dbus-send --system --type=signal / org.chromium.EventLogger.ChromeEvent string:tab-discard

access: 1
faccessat: 1
faccessat2: 1
arch_prctl: 1
brk: 1
clock_getres: 1
clock_gettime: 1
clock_nanosleep: 1
close: 1
connect: 1
exit_group: 1
fcntl: 1
fstat: 1
fstatfs: 1
ftruncate: 1
futex: 1
geteuid: 1
getpid: 1
getrandom: arg2 in ~GRND_RANDOM
getresgid: 1
getresuid: 1
getrlimit: 1
getsockname: 1
gettid: 1
# TCGETS gets tty settings, FIOCLEX is close on exec.
ioctl: arg1 == TCGETS || arg1 == FIOCLEX
lseek: 1
memfd_create: 1
# Prevent PROT_WRITE | PROT_EXEC.
mmap: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
mprotect: arg2 in ~PROT_EXEC || arg2 in ~PROT_WRITE
munmap: 1
nanosleep: 1
newfstatat: 1
open: 1
openat: 1
poll: 1
pread64: 1
prlimit64: arg2 == 0 && arg3 != 0
pselect6: 1
read: 1
readlink: 1
recvmsg: 1
restart_syscall: 1
rt_sigaction: 1
rt_sigprocmask: 1
sched_getaffinity: 1
select: 1
sendmsg: 1
sendto: 1
set_robust_list: 1
set_tid_address: 1
sigaltstack: 1
# For D-Bus and syslog.
socket: arg0 == AF_UNIX
stat: 1
statx: 1
sysinfo: 1
tgkill: 1
write: 1
