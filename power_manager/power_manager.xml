<node name="/org/chromium/">
  <interface name="org.chromium.PowerManager">
    <annotation name="org.freedesktop.DBus.GLib.CSymbol"
                value="power_manager"/>

    <method name="IncreaseScreenBrightness"></method>

    <method name="DecreaseScreenBrightness">
      <arg type="b" name="allow_off" direction="in" />
    </method>

  </interface>
</node>
