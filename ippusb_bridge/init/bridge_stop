logger -t bridge_stop \
  "Stopping ippusb_bridge for $ID_VENDOR_ID:$ID_MODEL_ID" \
  "on $BUSNUM:$DEVNUM ($DEVNAME)"
exec /sbin/stop --no-wait --quiet ippusb-bridge \
  BUS="$BUSNUM" DEV="$DEVNUM" VID="$ID_VENDOR_ID" PID="$ID_MODEL_ID"
