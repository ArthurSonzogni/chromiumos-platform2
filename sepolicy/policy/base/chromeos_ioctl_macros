# ARCVM devices current kernel version is v5.4. Since fscrypt v2 ioctls are
# introduced to Chrome OS by kernel 5.4, selinux policy on ARCVM devices will
# always need these ioctls defines.
is_arc_vm(`
  # fscrypt ioctls allowed to cryptohome
  define(`cryptohome_fscrypt_ioctls', `
  {
    FS_IOC_SET_ENCRYPTION_POLICY
    FS_IOC_GET_ENCRYPTION_POLICY
    FS_IOC_GET_ENCRYPTION_POLICY_EX
    FS_IOC_ADD_ENCRYPTION_KEY
    FS_IOC_GET_ENCRYPTION_KEY_STATUS
    FS_IOC_GET_ENCRYPTION_NONCE
    FS_IOC_DROP_CACHE
  }')
')
