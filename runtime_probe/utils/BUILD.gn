import("//common-mk/pkg_config.gni")

pkg_config("target_defaults") {
  pkg_deps = [
    "libbrillo",
    "libchrome",
  ]
}

source_set("utils") {
  sources = [
    "bus_utils.cc",
    "edid.cc",
    "file_utils.cc",
    "input_device.cc",
    "multi_function_runner.cc",
    "pipe_utils.cc",
    "type_utils.cc",
    "value_utils.cc",
  ]
  configs += [ ":target_defaults" ]
}

if (use.test) {
  source_set("test_utils") {
    configs += [ ":target_defaults" ]
    sources = [
      "file_test_utils.cc",
      "function_test_utils.cc",
    ]
    public_deps = [ "//runtime_probe/system:test_utils" ]
  }
  source_set("test") {
    sources = [
      "bus_utils_test.cc",
      "file_test_utils_test.cc",
      "file_utils_test.cc",
      "function_test_utils_test.cc",
      "multi_function_runner_test.cc",
      "pipe_utils_test.cc",
      "value_utils_test.cc",
    ]
    configs += [
      ":target_defaults",
      "//common-mk:test",
    ]
    deps = [
      ":test_utils",
      ":utils",
    ]
  }
}
