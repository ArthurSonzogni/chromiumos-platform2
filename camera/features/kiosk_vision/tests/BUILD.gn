import("//common-mk/pkg_config.gni")

group("all") {
  deps = []
  if (use.test) {
    deps += [ ":kiosk_vision_wrapper_test" ]
  }
}

pkg_config("target_defaults") {
  configs = [
    "//camera/build:cros_camera_common",
    "//common-mk:test",
  ]
  pkg_deps = [
    "libchrome-test",
    "libsession_manager-client",
  ]
}

executable("kiosk_vision_wrapper_test") {
  sources =
      [ "//camera/features/kiosk_vision/tests/kiosk_vision_wrapper_test.cc" ]
  configs += [ ":target_defaults" ]
  install_path = "bin"
  deps = [
    "//camera/common:base",
    "//camera/common/test_support",
    "//camera/features/kiosk_vision",
    "//ml_core/dlc:dlc_client",
  ]
}
