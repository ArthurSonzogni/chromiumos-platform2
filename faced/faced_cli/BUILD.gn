import("//common-mk/pkg_config.gni")

group("all") {
  deps = [ ":faced_cli" ]
}

pkg_config("target_defaults") {
  pkg_deps = [ "libbrillo" ]
}

static_library("faced_cli") {
  sources = [
    "faced_cli.cc",
    "faced_client.cc",
  ]
  pkg_deps = [ "libchrome" ]
}

source_set("unit_tests") {
  sources = [ "faced_cli_test.cc" ]
  deps = [ ":faced_cli" ]
  configs += [ ":target_defaults" ]
}
